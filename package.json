{
  "name": "nifty-option-chain-tracker",
  "version": "3.0.0",
  "description": "Real-time NIFTY option chain tracker with historical data storage - TypeScript Edition",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc && tsc-alias",
    "start": "node -r tsconfig-paths/register dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only -r tsconfig-paths/register src/server.ts",
    "dev:watch": "nodemon --exec ts-node -r tsconfig-paths/register src/server.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "postbuild": "cp -r public dist/ && cp .env.example dist/",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "nifty",
    "options",
    "trading",
    "kite-connect",
    "historical-data",
    "typescript"
  ],
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "express-validator": "^7.0.1",
    "google-auth-library": "^9.0.0",
    "google-spreadsheet": "^4.1.5",
    "helmet": "^6.1.5",
    "joi": "^17.9.2",
    "kiteconnect": "^4.1.0",
    "node-xlsx": "^0.23.0",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.3",
    "@types/node": "^20.4.5",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "eslint": "^8.45.0",
    "jest": "^29.6.1",
    "nodemon": "^3.0.1",
    "rimraf": "^5.0.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.6"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "author": "Abhishek Goyal",
  "license": "MIT"
}
