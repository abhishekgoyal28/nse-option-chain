{
  "name": "nifty-option-chain-tracker",
  "version": "2.0.0",
  "description": "Real-time NIFTY option chain tracker with historical data storage",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "node test_periodic_fetch.js",
    "deploy:aws": "chmod +x deploy/aws-deploy.sh && ./deploy/aws-deploy.sh",
    "deploy:heroku": "./deploy-heroku.sh",
    "deploy:gcp-compute": "chmod +x deploy/gcp-compute-engine.sh && ./deploy/gcp-compute-engine.sh",
    "deploy:gcp-run": "chmod +x deploy/gcp-cloud-run.sh && ./deploy/gcp-cloud-run.sh",
    "deploy:gcp-appengine": "chmod +x deploy/gcp-app-engine.sh && ./deploy/gcp-app-engine.sh",
    "docker:build": "docker build -t nse-tracker .",
    "docker:run": "docker run -d --name nse-tracker -p 3000:3000 --env-file .env -v $(pwd)/data:/app/data nse-tracker",
    "deploy:railway": "./deploy-railway.sh",
    "docker:stop": "docker stop nse-tracker && docker rm nse-tracker",
  },
  "keywords": [
    "nifty",
    "options",
    "trading",
    "kite-connect",
    "historical-data",
    "charts"
  ],
  "dependencies": {
    "chartjs-plugin-zoom": "^2.2.0",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-rate-limit": "^6.11.2",
    "helmet": "^6.2.0",
    "kiteconnect": "^4.1.0",
    "node-xlsx": "^0.23.0"
  },
  "devDependencies": {
    "nodemon": "^2.0.22"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "author": "Your Name",
  "license": "MIT"
}
